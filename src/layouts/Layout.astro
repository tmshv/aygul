---
import type { MarkdownLayoutProps } from "astro";
import Style from "../components/Style.astro";

type Props = MarkdownLayoutProps<{
    // Define frontmatter props here
    title: string;
    author: string;
    date: string;
}>;

// export interface Props {
//     title: string;
// }

// const { title } = Astro.props;
// const { frontmatter } = Astro.props;
const { title } = Astro.props.frontmatter || Astro.props;
// const title = frontmatter.title ?? "AygulF"
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />

        <title>{title}</title>
    </head>
    <body>
        <Style />
        <main>
            <article>
                <slot />
            </article>
        </main>
    </body>
</html>

<style is:global>
    :root {
        --accent: 124, 58, 237;
        --accent-gradient: linear-gradient(
            45deg,
            rgb(var(--accent)),
            #da62c4 30%,
            white 60%
        );

        /* --font-family-regular: "Lora-Regular", system-ui, sans-serif; */
        /* --font-family-italic: "Lora-Italic", system-ui, sans-serif; */
        --font-family-regular: "Literata-Regular", system-ui, sans-serif;
        --font-family-italic: "Literata-Italic", system-ui, sans-serif;
    }

    html {
        font-family: var(--font-family-regular);
        background-color: #f6f6f6;

        font-size: 16px;
    }

    * {
        padding: 0;
        margin: 0;
    }

    main {
        display: flex;
        flex-direction: column;
        align-items: center;

        padding: 2rem 1.25rem;
    }

    article {
        font-family: var(--font-family-regular);
        font-size: 16px;

        /* min-width: 600px; */
        max-width: 800px;
        /* width: 65%; */

        line-height: 1.5;
    }

    h1 {
        font-size: 2.5rem;
        line-height: 1.25;
        margin-bottom: 2rem;
    }

    blockquote {
        font-family: var(--font-family-italic);
        font-style: italic;

        /* font-size: 0.9rem; */
        /* padding: 0 1rem; */
        text-align: right;

        margin-bottom: 2rem;
    }

    mark {
        background-color: rgba(0, 0, 0, 0);
        background-image: linear-gradient(rgba(255, 255, 255, 0) 35%, rgb(235 215 180) 65%);
    }

    p {
        margin-bottom: 1rem;
    }

    em {
        font-family: var(--font-family-italic);
        font-style: italic;
    }

    hr {
        border: none;
        /* content: '...'; */
        /* width: 100%; */
        /* height: 100px; */
        display: flex;
        justify-content: center;
        margin-bottom: 1rem;
    }

    hr:after {
        content: "ยง";
        /* content: "***"; */
        color: #999;
    }
</style>
